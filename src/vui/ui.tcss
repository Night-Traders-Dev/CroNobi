DesktopBase {
    layers: one two three four;
    background: rgb(44, 0, 30);
    layout: grid;
    grid-rows: 1fr 9fr;
    grid-columns: 1fr 9fr;
    width: 1fr;
    height: 1fr;
    layer: one;
}

#dash {
    layout: vertical;
    background: rgb(94, 39, 80);
    opacity: 0.0;
    height: 1fr;
    width: 8;
    dock: left;
    layer: one;
}

#topbar {
    layout: vertical;
    align: center top;
    background: rgba(119, 33, 111, 100);
    height: 3;
    width: 1fr;
    dock: top;
    layer: one;
}

#clock {
    offset-x: -2;
    background: rgba(119, 33, 111, 100);   
    color: rgb(17, 17, 17);
    text-style: bold;
    dock: top;
    layer: three;
    content-align: right top;
}



DashScreen {
    align: center middle;
}

#Dashboard {
    background: rgba(233, 84, 32, 0.08);
}
